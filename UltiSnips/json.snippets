snippet policy-body "skeleton for AWS IAM policy"
{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "${1:DescriptionInCamelCase}",
			"Effect": "${2:Effect}",
			"Action": [
				"${3:Action}",
			],
			"Resource": [
			"${4:Resource}"
			]
		}
	]
}
endsnippet

snippet policy-statement "add IAM policy statement"
{
	"Sid": "${1:DescriptionInCamelCase}",
	"Effect": "${2:Effect}",
	"Action": [
	"${3:ActionType}"
	],
	"Resource": [
	"${4:Resource}"
	]
}
endsnippet
