#!/bin/bash

#TEST=$(tmux display-message -p '#W')
#echo "Welcome to window $TEST"


TMUX_WINDOW_NAME=$(tmux display-message -p -F '#S;#I;#W')
TIMESTAMP=$(date +%Y-%m-%d:%H:%M)
#LOGFILE=${TIME_TRACKING_LOGFILE:=~/.time_tracking.log}
LOGFILE=${TIME_TRACKING_LOGFILE:-~/.time_tracking.log}

echo "$TIMESTAMP  -  $TMUX_WINDOW_NAME" >> $LOGFILE

#FILE FORMAT:
#TIME; TMUX_WINDOW_NAME
