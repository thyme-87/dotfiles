#!/bin/bash

screens=$(xrandr --listactivemonitors | awk '{print $4}')

activate_screen_command="--output VGA-0 --off --output LVDS-0 --off"
for screen in $screens; do
    activate_screen_command+=" --output $screen --mode 2560x1440 --rotate normal"
done

#echo "xrandr ${activate_screen_command} --pos 0x0"
xrandr ${activate_screen_command} --pos 0x0
